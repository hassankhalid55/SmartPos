<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
                   auto-import="true" 
                   assembly="SmartPos" 
                   namespace="SmartPos.Models">
  
  <!--SALESITEM-->
  <class name="SalesItem" table="SalesItem" dynamic-update="true" >
    <cache usage="read-write"/>
    <id name="Sn" column="Sn" type="int">
      <generator class="native" />
    </id>
    <property name="Sid" />
    <property name="Pid" />
    <property name="Qty" />
    <property name="Oid" />
    <property name="Total" />
  </class>

  <!--ORDER-->
  <class name="Order" table="`Order`" dynamic-update="true" >
    <cache usage="read-write"/>
    <id name="Sn" column="Sn" type="int">
      <generator class="native" />
    </id>
    <property name="Oid" />
    <property name="Date" />
    <property name="Cid" />
    <property name="GrossTotal" />
  </class>

  <!--PRODUCT-->
  <class name="Product" table="Product" dynamic-update="true" >
    <cache usage="read-write"/>
    <id name="Sn" column="Sn" type="int">
      <generator class="native" />
    </id>
    <property name="Pid" />
    <property name="Description" />
    <property name="Price" />
    <property name="Qty"/>
  </class>

  <!--INVENTORY-->
  <class name="Inventory" table="Inventory" dynamic-update="true" >
    <cache usage="read-write"/>
    <id name="Sn" column="Sn" type="int">
      <generator class="native" />
    </id>
    <property name="Pid" />
    <property name="QtyInStock" />
  </class>

  <!--CUSTOMER-->
  <class name="Customer" table="Customer" dynamic-update="true" >
    <cache usage="read-write"/>
    <id name="Sn" column="Sn" type="int">
      <generator class="native" />
    </id>
    <property name="Cid" />
    <property name="Name" />
  </class>

  <!--StockIn-->
  <class name="StockIn" table="StockIn" dynamic-update="true" >
    <cache usage="read-write"/>
    <id name="Sn" column="Sn" type="int">
      <generator class="native" />
    </id>
    <property name="Pid" />
    <property name="StockedIn" />
    <property name="Date" />
    <property name="Price"/>
  </class>

  <!--StockOut-->
  <class name="StockOut" table="StockOut" dynamic-update="true" >
    <cache usage="read-write"/>
    <id name="Sn" column="Sn" type="int">
      <generator class="native" />
    </id>
    <property name="Pid" />
    <property name="StockedOut" />
    <property name="Date" />
    <property name="Price"/>
  </class>
  
  <!--MAPPING FOR spGetProductWithDetails-->
  <sql-query name="uspGetProductWithDetails" callable="true">
    <!--<query-param name="companyId" type="int"/>
    <query-param name="startDate" type="DateTime"/>
    <query-param name="endDate" type="DateTime"/>-->
    <return class="Product">
      <return-property column="Sn" name="Sn" />
      <return-property column="Pid" name="Pid" />
      <return-property column="Description" name="Description" />
      <return-property column="Price" name="Price" />
      <return-property column="Qty" name="Qty" />
    </return>
    exec [dbo].[uspGetProductWithDetails]
  </sql-query>

</hibernate-mapping>
